<div class= 'container edit-button'>
<div class="row">
    <div class="col s8 align center">
      <div class="card hoverable">
        <div class="card-image">
         <%= image_tag("girl2") %> 
          <span class="card-title yellow accent-3"><%= @student.id %></span>
        </div>
        <div class="card-content">
          <p><%= @student.name %></p>
          <p><%= @student.email %></p>
        </div>
        <div class="card-action yellow accent-3">
          <a href="#">Course Enrollment</a>
        </div>
      </div>
    </div>
  </div>
  <% if current_user == @student %>
   <%= link_to '<i class="material-icons right">create</i> Edit Your Profile'.html_safe, edit_student_path(@student), class: 'waves-effect waves-light btn yellow accent-3' %>
 <% end %>
  </div>
